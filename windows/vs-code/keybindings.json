// Place your key bindings in this file to overwrite the defaults
[
    { "key": "ctrl+alt+shift+s",
      "command": "workbench.action.files.saveAll"
    },
    {
      "key": "ctrl+shift+a",
      "command": "workbench.action.tasks.runTask"
    },
    {
      "key": "ctrl+shift+a",
      "command": "workbench.action.debug.restart",
      "when": "inDebugMode"
    },
    {
      "key": "ctrl+s",
      "command": "workbench.action.debug.restart",
      "when": "inDebugMode"
    }
  ]